{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "module": "ES2022",
    "declarationMap": true,
    "target": "ES2022",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
