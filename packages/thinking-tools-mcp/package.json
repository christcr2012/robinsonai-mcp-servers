{
  "name": "@robinson_ai_systems/thinking-tools-mcp",
  "version": "1.6.1",
  "description": "Comprehensive Thinking Tools MCP - 24 cognitive frameworks + Context Engine with semantic search",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "thinking-tools-mcp": "./bin/thinking-tools-mcp.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "ctx:index": "node ./dist/context/indexer.js",
    "ctx:reset": "node -e \"const fs=require('fs');const files=['.robinson/context/chunks.jsonl','.robinson/context/embeddings.jsonl'];files.forEach(f=>{try{fs.unlinkSync(f)}catch{}});console.log('reset ok')\""
  },
  "keywords": [
    "mcp",
    "thinking",
    "reasoning",
    "cognitive-frameworks",
    "ai",
    "devils-advocate",
    "critical-thinking",
    "first-principles"
  ],
  "author": "Robinson AI Systems",
  "license": "MIT",
  "dependencies": {
    "@extractus/article-extractor": "^8.0.20",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@mozilla/readability": "^0.4.4",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "diff": "^5.2.0",
    "fast-glob": "^3.3.3",
    "fast-xml-parser": "^5.3.0",
    "globby": "^15.0.0",
    "jsdom": "^22.1.0",
    "micromatch": "^4.0.8",
    "node-fetch": "^3.3.2",
    "p-limit": "^4.0.0",
    "p-queue": "^6.6.2",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "robots-parser": "^3.0.1",
    "slash": "^5.1.0",
    "slugify": "^1.6.6",
    "string-strip-html": "^13.5.0",
    "undici": "^6.22.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "typescript": "^5.7.3",
    "zod": "^3.25.76"
  }
}
